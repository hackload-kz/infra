apiVersion: v1
kind: Secret
metadata:
  name: job-service-secrets
  namespace: hub
type: Opaque
stringData:
  # Hub API Authentication
  SERVICE_API_KEY: "hackload-service-key-xxxxx"
  
  # GitHub API Access (required for git monitoring)
  GITHUB_TOKEN: "ghp_xxxxx"
  
  # Optional: GitHub App Authentication (alternative to token)
  # GITHUB_APP_ID: "123456"
  # GITHUB_APP_PRIVATE_KEY: |
  #   -----BEGIN RSA PRIVATE KEY-----
  #   MIIEpAIBAAKCAQEA...
  #   -----END RSA PRIVATE KEY-----
  
  # Grafana API Access (for K6 services when enabled)
  # GRAFANA_API_URL: "https://grafana.hackload.kz/api"
  # GRAFANA_TOKEN: "glsa_xxxxx"
  # GRAFANA_USERNAME: "hackload-job-service"
  
  # Cloud Provider API Keys (for cost tracking when enabled)
  # AWS_ACCESS_KEY_ID: "AKIAXXXXX"
  # AWS_SECRET_ACCESS_KEY: "xxxxx"
  # AZURE_CLIENT_ID: "xxxxx"
  # AZURE_CLIENT_SECRET: "xxxxx"
  # AZURE_TENANT_ID: "xxxxx"
  # GCP_SERVICE_ACCOUNT_KEY: |
  #   {
  #     "type": "service_account",
  #     "project_id": "hackload-project",
  #     ...
  #   }
  
  # Database Connection (optional direct access)
  # DATABASE_URL: "postgresql://user:pass@postgres:5432/hackload"
  
  # Monitoring and Observability (optional)
  # PROMETHEUS_PUSHGATEWAY_URL: "http://prometheus-pushgateway:9091"
  # SENTRY_DSN: "https://xxxxx@sentry.io/xxxxx"